# üóÑÔ∏è Database Configuration (Choose one storage type)
STORAGE_TYPE=mongodb
# For MongoDB (recommended):
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/stelluna
# For PostgreSQL (alternative - required for Drizzle migrations even if using MongoDB):
DATABASE_URL=postgresql://username:password@localhost:5432/stelluna

# üîê Session Security (REQUIRED)
SESSION_SECRET=your_super_secure_session_secret_here_at_least_32_characters_long

# üéØ Google OAuth (Required for authentication)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Optional: Custom callback URL (auto-detected if not set)
# GOOGLE_CALLBACK_URL=https://your-domain.vercel.app/api/auth/google/callback

# ü§ñ AI Providers (At least one required)
# Google Gemini (recommended, free tier available)
GEMINI_API_KEY=your_google_gemini_api_key_here
# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here
# OpenRouter (multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# üîç Search APIs (Optional but recommended)
# Google Search API (different from Gemini)
GOOGLE_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_custom_search_engine_id_here
YOUTUBE_API_KEY=your_youtube_data_api_key_here

# üåê Production Deployment (Auto-configured by Vercel)
# PORT=5000
# VERCEL_URL (automatically set by Vercel)
# NODE_ENV (automatically set to production by Vercel)

# üîß Replit-specific (only for Replit deployment)
# REPLIT_DOMAINS=https://your-repl-domain.replit.dev
# ISSUER_URL=your_issuer_url
# REPL_ID=your_repl_id